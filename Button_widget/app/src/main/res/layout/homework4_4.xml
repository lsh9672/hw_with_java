<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/btn_twice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TWICE"/>
                    <CheckBox
                        android:id="@+id/btn_bts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BTS"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#14E22C">
                    <RadioGroup
                        android:id="@+id/group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/btn_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="name1"/>
                        <RadioButton
                            android:id="@+id/btn_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="name2"/>
                        <RadioButton
                            android:id="@+id/btn_name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="name3"/>
                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#9660D9"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/group_scale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/btn_scale1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="fitCenter"/>
                    <RadioButton
                        android:id="@+id/btn_scale2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Matrix"/>
                    <RadioButton
                        android:id="@+id/btn_scale3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="fitXY"/>
                    <RadioButton
                        android:id="@+id/btn_scale4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="center"/>
                </RadioGroup>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
             />
    </LinearLayout>


</LinearLayout>