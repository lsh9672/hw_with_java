<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/join_activity_top"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="70dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/join_activity">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/login_id_pw">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/iconfinder_user"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    />
                <EditText
                    android:id="@+id/join_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="name"
                    android:background="@null"
                    android:textColorHint="@color/colorWhite"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/login_id_pw"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/iconfinder__email"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    />
                <EditText
                    android:id="@+id/join_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="E-mail"
                    android:background="@null"
                    android:textColorHint="@color/colorWhite"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/login_id_pw"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/iconfinder_passwd"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    />
                <EditText
                    android:id="@+id/join_passwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="PW"
                    android:background="@null"
                    android:textColorHint="@color/colorWhite"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:password="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/login_id_pw"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/iconfinder_passwd"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    />
                <EditText
                    android:id="@+id/join_passwd_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="PW Check"
                    android:background="@null"
                    android:textColorHint="@color/colorWhite"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:password="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/join_btn">

                <Button
                    android:id="@+id/join_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="가입하기"
                    android:textSize="30dp"
                    android:background="@null"
                    android:textColor="@color/colorWhite"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
